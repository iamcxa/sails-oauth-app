<div id="set-password" v-cloak>
    <account-notification-banner></account-notification-banner>
    <div class="container pt-5 pb-5">
        <h1>Set a new password</h1>
        <p>
            Hi <b><%= me.fullName %></b>! Because of you are chosen to logged in with <b><%= provider ;%></b>, so you may want to create a new password
            for the site so you can use email and password to log in.
            <span class="font-weight-light">
            ...if skip setup new password this time, you can set up new password in the dashboard later.
            </span>
        </p>
        <hr/>
        <ajax-form ref="form" :action="formAction" :syncing.sync="syncing" :cloud-error.sync="cloudError"
                   :form-data="formData"
                   :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <input-password
                            :input-name="'password'"
                            :form-errors="formErrors"
                            :form-data="formData"
                            :focus-first="true"
                            :label="'New password'"
                            :error-message="'Please enter a VALID password or choose `Skip`.'"
                            @change="formValidate()"></input-password>
                    <password-check-panel :form-data="formData" :form-errors="formErrors"/>
                </div>
                <div class="col-sm-3"></div>

                <div class="col-sm-12">
                </div>

                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <input-password
                            :input-name="'confirmPassword'"
                            :form-errors="formErrors"
                            :form-data="formData"
                            :focus-first="false"
                            :label="'Confirm password'"
                            :error-message="'Your new password and confirmation do not match.'"
                            @change="formValidate()"></input-password>
                </div>
                <div class="col-sm-3"></div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <cloud-error v-if="cloudError"></cloud-error>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group text-right">
                        <a class="btn btn-outline-info" @click="submittedFormWithSkipPass()">Skip for now</a>
                        <ajax-button type="button" :syncing="syncing" class="btn btn-dark" @click="submittedForm()">Set password</ajax-button>
                    </div>
                </div>
            </div>
        </ajax-form>
    </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser(); %>
